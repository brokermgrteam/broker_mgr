<div class="row-fluid">
	<div class="alert alert-info">
		现在是<%= Time.now.strftime("%Y年%m月") %>，以下为当前名下客户基本情况。
  	<a class="close" data-dismiss="alert">×</a>
	</div>
</div>
<div class="row-fluid">
	<div class="span4">
		<div class="well well-small">
			<%= render 'brokers/custs/brokercusts_table_1' %>
		</div>
	</div>
	<div class="span4">
		<div class="well well-small">
			<%= render 'brokers/custs/brokercusts_table_2' %>
		</div>
	</div>
	<div class="span4">
		<div class="well well-small">
			<%= render 'brokers/custs/brokercusts_table_3' %>
		</div>
	</div>
</div>
<div class="row-fluid">
	<div class="well">
		<p class="text-center" id="tab_page">
			<% if current_user == @broker.user %>
				<%= link_to '我的客户', custs_path, :class => 'btn btn-primary' %>
			<% else %>
				<%= link_to '名下客户', custs_path(:broker_id => @broker),  :class => 'btn btn-primary' %>
			<% end %>
		</p>
	</div>
</div>
