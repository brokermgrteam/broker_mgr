<div class="row-fluid">
	<div class="span4 offset4">
		<div class="well">
			<p class="lead text-center">登录系统</p>
				<%= simple_form_for(:session, :url	=> sessions_path) do |f| %>
						<%= render 'sessions/fields', :f => f %>
						<div class="form-actions">
						  <p class="text-center">
								<%= f.submit "确认", :class => 'btn btn-info' %>
								<%= link_to '取消', root_path, :class => 'btn' %>
							</p>
				<% end %>
							<p class="text-right text-info">
								<a href="#myModal" role="button" data-toggle="modal">忘记密码？</a>
							</p>
							<%= render 'recoverypasswords/fields' %>
						</div>
		</div>
	</div>
</div>
