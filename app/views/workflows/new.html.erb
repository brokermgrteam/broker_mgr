<div class="page-header">
  <h3>新建工作流程</h3>
</div>
<%= simple_form_for @workflow, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
	<%= render 'fields', :f => f %>
	<div class="form-actions">
		<%= f.submit "确认", :class => 'btn btn-primary' %>
		<%= link_to '取消', workflows_path, :class => 'btn' %>
	</div>
  </fieldset>
<% end %>