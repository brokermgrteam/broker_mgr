<div class="row-fluid">
	<div class="span9">
		<div class="page-header">
		  <h3>新建工作流程</h3>
		</div>
		<%= simple_form_for @workflow, :html => { :class => 'form-horizontal' } do |f| %>
			<%= render 'fields', :f => f %>
			<div class="form-actions">
				<%= f.submit "确认", :class => 'btn btn-primary' %>
				<%= link_to '取消', workflows_path, :class => 'btn' %>
			</div>
		  </fieldset>
		<% end %>
		</div>
		<div class="span3">
			<div class="alert alert-block">
			  <button type="button" class="close" data-dismiss="alert">&times;</button>
			  <h4>帮助</h4>
			  工作流程在此处定义。
			</div>
		</div>
</div>