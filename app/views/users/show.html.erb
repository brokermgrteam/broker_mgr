<div class="row-fluid">
	<div class="span9">
		<div class="well">
			<div class="tabbable tabs">
			  <ul class="nav nav-tabs">
			    <li class="active"><a href="#1" data-toggle="tab">角色权限</a></li>
			    <li><a href="#2" data-toggle="tab">登录日志</a></li>
			  </ul>
			  <div class="tab-content">
			    <div class="tab-pane active" id="1">
				  	<h2><%= @user.name %></h2>
					<p><%= @user.email %></p>
			    </div>
			    <div class="tab-pane" id="2">
			      <% @user.sessions.find(:all, :order => "created_at desc", :limit => 10).each do |s| %>
			      	<div class="well well-small">
			      		前台登录： <%= s.created_at %>
			      	</div>
			      <% end %>
			    </div>
			  </div>
			</div>
		</div>
	</div>
	<div class="span3">
		<div class="well">
			<h4><%= @user.name %></h4>
			<p class="muted"><strong><%= @user.usercode %></strong></p>
			<ul class="common-divider"></ul>
			<ul class="inline">
				<% if !@user.department_id.nil? %>
				<li><strong>分公司：</strong></li>
				<li><%= Department.find(@user.department_id).name %></li><br/>
				<% end %>
				<% if !Branch.find_by_id(@user.branch_id).nil? %>
				<li><strong>营业部：</strong></li>
				<li><%= Branch.find(@user.branch_id).name %></li><br/>
				<% end %>
			</ul>
			<ul class="common-divider"></ul>
		</div>
		
		<div class="alert alert-block">
		  <button type="button" class="close" data-dismiss="alert">&times;</button>
		  <h4>帮助</h4>
		  用户资料与人力资源部同步，无需自行修改，用户权限由销售交易总部分配。
		</div>
	</div>
</div>